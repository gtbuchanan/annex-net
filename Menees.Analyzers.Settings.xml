<?xml version="1.0" encoding="utf-8"?>
<Menees.Analyzers.Settings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Menees.Analyzers.Settings.xsd">
  <!--
  Justification: 80 is the historical recommendation due to punch cards but also
  has some basis in "reading ergonomics" (e.g. typography). 100 is chosen as a
  compromise between those coding full screen on larger monitors and those that aren't.
  -->
  <MaxLineColumns>100</MaxLineColumns>
  <UnitTestAttributes>
    <Class>TestFixture</Class>
    <Method>Test</Method>
    <Method>TestCase</Method>
    <Method>Fact</Method>
    <Method>Theory</Method>
  </UnitTestAttributes>
</Menees.Analyzers.Settings>
