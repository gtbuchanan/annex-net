{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "../src"
        }
      ],
      "dest": "obj/temp/api",
      "properties": {
        "TargetFramework": "net6.0"
      },
      "shouldSkipMarkup": true
    }
  ],
  "build": {
    "content": [
      {
        "files": "**/*.yml",
        "src": "obj/temp/api",
        "dest": "api"
      },
      { "files": "*.{md,yml}" }
    ],
    "overwrite": "apispec/*.md",
    "resource": [
      { "files": [ "favicon.ico", "logo.svg" ] }
    ],
    "template": [ "default", "custom_template" ],
    "globalMetadata": {
      "_appTitle": "Annex.NET",
      "_appFooter": "<span>Copyright Â© George Taylor Buchanan<br>Generated by <strong>DocFX</strong></span>"
    }
  }
}
